<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationAct"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/arkaplan3">

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rezervasyon yapmak istediğiniz masaya tıklayın"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/table1id"
            android:layout_width="150dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/table"
            android:backgroundTint="#ead9c7"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="51dp" />

        <TextView
            android:id="@+id/table1Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/table2id"
            android:layout_width="150dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/table"
            android:backgroundTint="#ead9c7"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="149dp" />

        <TextView
            android:id="@+id/table2Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/table3id"
            android:layout_width="150dp"
            android:layout_height="110dp"
            app:srcCompat="@drawable/table"
            android:backgroundTint="#ead9c7"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="51dp"
            android:contentDescription="" />

        <TextView
            android:id="@+id/table3Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/table4id"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:backgroundTint="#ead9c7"
            app:srcCompat="@drawable/table"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="51dp" />

        <TextView
            android:id="@+id/table4Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durum"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
