<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddWaiter"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/arkaplan3">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mail Adresi"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:id="@+id/manageremail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Åžifre"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:id="@+id/managerpass" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="Giris Yap"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        android:textAllCaps="true"
        android:onClick="managerlogIn"
        android:background="@drawable/button_curved_rectangle"
        android:textColor="@color/white"
        android:backgroundTint="#0091EA"/>


</LinearLayout>
