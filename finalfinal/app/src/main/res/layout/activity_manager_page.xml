<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerPage"
    android:orientation="vertical"
    android:background="@drawable/arkaplan3"
    android:gravity="center">

    <Button
        android:id="@+id/addwaiter"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_curved_rectangle"
        android:text="çalışan ekle"
        android:textSize="17sp"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/waiterlist"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:background="@drawable/button_curved_rectangle"
        android:text="çalışanları gör"
        android:backgroundTint="@color/black"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:textAllCaps="true"/>

</LinearLayout>
